<section class="d-flex justify-content-center align-items-center signup-sec">
    <div class="w-100">
        <div class="signup-container">
            <h2 class="text-center mb-4">Login</h2>
            <form action="/login" method="post">
                {{#if error}}
                <p id="error-message" style="color: red;">{{error}}</p>
                {{/if}}
                <div class="form-floating mb-2">
                    <input type="text" class="form-control rounded-3" id="floatingInput" name="email"
                        placeholder="email" required>
                    <label for="floatingInput">Email</label>
                </div>

                <div class="form-floating mb-2">
                    <input type="password" class="form-control rounded-3" id="floatingInput" name="password"
                        placeholder="Password" required>
                    <label for="floatingInput">Password</label>
                </div>


                <button type="submit" class="form-btn w-100 py-2">Login</button>
                {{!-- <div class="text-center"><span class="m-0 py-2">or</span></div> --}}

                <div class="or-line">
                    <span>or</span>
                </div>
                <button type="button" onclick="window.location.href='/google-auth'" class="form-btn w-100 py-2"><i
                        class="fa-brands fa-google"></i> Signin with
                    Google</button>
                {{!-- <a href="/google-auth" class=""><button class="form-btn w-100 py-2"><i
                            class="fa-brands fa-google"></i> &nbsp; Continue with
                        Google</button></a> --}}
                <div class="mt-2 text-center">
                    <p>Donâ€™t have an account ? <a class="normal-link" style="color: rgb(1, 59, 197);"
                            href="/signup">Sign up</a></p>
                </div>
            </form>
        </div>
    </div>
</section>