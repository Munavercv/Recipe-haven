<section class="d-flex justify-content-center align-items-center signup-sec">
    <div class="w-100">
        <div class="signup-container">
            <h2 class="text-center mb-4">Sign-Up</h2>
            <form id="signupForm">
                <p id="error-message" style="color: red;"></p>

                <div class="form-floating mb-2">
                    <input type="text" class="form-control rounded-3" id="floatingInput" name="name" placeholder="name" required>
                    <label for="floatingInput">Name</label>
                </div>

                <div class="form-floating mb-2">
                    <input type="text" class="form-control rounded-3" id="floatingInput" name="email"
                        placeholder="email" required>
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating mb-2">
                    <input type="text" class="form-control rounded-3" id="floatingInput" name="mobile"
                        placeholder="mobile" required>
                    <label for="floatingInput">Mobile</label>
                </div>
                <div class="form-floating mb-2">
                    <input type="password" class="form-control rounded-3" id="floatingInput" name="password"
                        placeholder="Password" required>
                    <label for="floatingInput">Password</label>
                </div>
                <div class="form-floating mb-2">
                    <input type="password" class="form-control rounded-3" id="floatingInput" name="confirmPassword"
                        placeholder="confirm password" required>
                    <label for="floatingInput">Confirm Password</label>
                </div>

                <button type="submit" class="form-btn w-100 py-2">Send OTP</button>
                {{!-- <div class="text-center"><span class="m-0 py-2">or</span></div> --}}

                <div class="or-line">
                    <span>or</span>
                </div>

                <button type="" class="form-btn w-100 py-2"><i class="fa-brands fa-google"></i> &nbsp; Signin with
                    Google</button>
                <div class="mt-2 text-center">
                    <a href="/login">Already have an account ? Log in</a>
                </div>
            </form>
        </div>
    </div>
</section>


<script>
    document.getElementById('signupForm').addEventListener('submit', function (event) {
  event.preventDefault(); // Prevent page reload

  const form = event.target;
  const formData = new FormData(form);

  fetch('/signup', {
    method: 'POST',
    body: formData
  })
  .then(response => response.json())
  .then(data => {
    const errorMessage = document.getElementById('error-message');

    if (data.error) {
      // Show error message if there is one
      errorMessage.textContent = data.error;
    } else if (data.success) {
      // Redirect to OTP verification page if signup is successful
      window.location.href = '/verify-otp';
    }
  })
  .catch(error => {
    console.error('Error:', error);
  });
});

