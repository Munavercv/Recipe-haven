<section class="d-flex justify-content-center align-items-center signup-sec">
    <div class="w-100">
        <div class="signup-container">
            <h2 class="text-center mb-2">Verify OTP</h2>
            <form action="/verify-otp" method="post">
                {{#if error}}
                <p id="error-message" style="color: red;">{{error}}</p>
                {{/if}}
                <p class="text-center">OTP is sent to your email.</p>
                <div class="form-floating mb-2">
                    <input type="text" class="form-control rounded-3" id="floatingInput" name="otp" placeholder="OTP">
                    <label for="floatingInput">Enter OTP</label>
                </div>

                <input type="email" name="email" value="{{email}}" hidden>


                <button type="submit" class="form-btn w-100 py-2">Sign up</button>
                {{!-- <div class="text-center"><span class="m-0 py-2">or</span></div> --}}
                <div class="mt-2 text-center">
                    <a class="normal-link" href="">Resend otp </a>in 01:59
                </div>
            </form>
        </div>
    </div>
</section>