<section class="d-flex justify-content-center align-items-center signup-sec">
    <div class="w-100">
        <div class="signup-container">
            <h2 class="text-center mb-2">Verify OTP</h2>
            <form id="verifyOtpForm">

                <p class="text-center">OTP is sent to your email.</p>
                <div id="errorMessage" style="color: red; display: none;"></div>

                <div class="form-floating mb-2">
                    <input type="text" class="form-control rounded-3" id="otpInput" name="otp" placeholder="OTP">
                    <label for="floatingInput">Enter OTP</label>
                </div>

                <input type="email" id="emailInput" name="email" value="{{email}}" hidden>


                <button type="submit" class="form-btn w-100 py-2">Sign up</button>
                {{!-- <div class="text-center"><span class="m-0 py-2">or</span></div> --}}
                <div class="mt-2 text-center">
                   {{!-- <p> OTP will expire after 2 minutes </p> --}}
                    <a id="resendOtpLink" class="normal-link" href="/resend-otp">Resend OTP</a>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
const link = document.getElementById('resendOtpLink');

// Disable the link and change its appearance
function disableLink() {
  link.classList.add('disabled-link');
  link.style.pointerEvents = 'none'; // Prevent clicking
  link.style.color = 'gray'; // Optional: Change color to indicate it's disabled
  link.textContent = 'Resend OTP after 2 minutes';

  // Re-enable the link after 2 minutes (120,000 milliseconds)
  setTimeout(() => {
    link.classList.remove('disabled-link');
    link.style.pointerEvents = 'auto'; // Enable clicking
    link.style.color = ''; // Reset color
    link.textContent = 'Resend OTP'; // Reset text
  }, 120000); // 2 minutes
}

// Call the function to disable the link initially
disableLink();




  $('#verifyOtpForm').submit(function(e) {
    e.preventDefault();

    const otp = $('#otpInput').val();
    const email = $('#emailInput').val();

    $.ajax({
      url: '/verify-otp',
      method: 'POST',
      data: { otp, email },
      success: function(response) {
        if (response.success) {
          window.location.href = '/login'; // Redirect on success
        } else {
          // Display error message
          $('#errorMessage').text(response.message).show();
        }
      },
      error: function() {
        $('#errorMessage').text('An unexpected error occurred. Please try again.').show();
      }
    });
  });
</script>