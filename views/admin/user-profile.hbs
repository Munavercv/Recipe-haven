<section class="user-profile-sec">
    <div class="px-4 py-3 my-5 text-center">
        <div>
            <i class="fa-regular my-md-3 fa-circle-user"></i>
            <h1 class="display-5 fw-bold">{{userData.name}}</h1>
            {{#if userData.isPro}}
            <p class="badge rounded-pill text-bg-warning">pro</p>
            {{/if}}
            <p class="fw-medium">{{userData.email}}</p>
            <p class="fw-medium mb-4">{{userData.mobile}}</p>
        </div>
        <div>
            <h3><i class="fa-solid fa-utensils"></i> <span class="fw-bolder">{{recipesCount}}</span> Recipes</h3>
            <a href="/admin/view-recipes-by-user/{{userData._id}}"><button type="button" class="primary-btn mt-2">View
                    Recipes</button></a>
        </div>
        <hr class="my-5">
        <div class="col-lg-6 mx-auto mt-3">
            <div class="d-grid gap-5 d-sm-flex justify-content-sm-center">
                <a href="/admin/edit-profile/{{userData._id}}" class="normal-link"><i class="fa-solid fa-pen"></i> Edit profile</a>
                <a href="/admin/delete-user/{{userData._id}}"
                    onclick="return confirm('Are you sure you want to permenantly delete this User?')" class="normal-link"><i class="fa-solid fa-trash"></i> Remove user</a>
            </div>
        </div>
    </div>

</section>