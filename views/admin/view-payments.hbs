<section class="view-users-sec">

    <div class="head-sec my-3">
        <h2 class="section-title">Payments</h2>
    </div>

    <div class="container-fluid px-1 px-md-2">

        <!-- Table wrapper for responsiveness -->
        <div class="table-responsive">
            <table class="table table-hover payment-table">
                <thead>
                    <tr>
                        <th>Order id</th>
                        <th>Email</th>
                        <th>Amount</th>
                        <th>Date, Time</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each payments}}
                        <tr class="{{#if this.success}} row-success {{else}} row-failed {{/if}}" data-href="/admin/view-pay-details/{{this._id}}">
                            <td>{{this.orderId}}</td>
                            <td>{{this.userDetails.email}}</td>
                            <td>â‚¹ {{this.amount}}</td>
                            <td>{{this.createdAt}}</td>
                            <td>
                                {{#if this.success}}
                                <span class="status-success">success</span>
                                {{else}}
                                <span class="status-failed">failed</span>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>


<script>
    document.querySelectorAll('tr[data-href]').forEach(row => {
        row.addEventListener('click', () => {
            window.location.href = row.getAttribute('data-href');
        });
    });
</script>
