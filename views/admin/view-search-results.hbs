<section>
    <div class="container-fluid py-5">
        <div class="row">
            {{#if searchResults.length}}
            <h2 class="section-title text-center mb-3">Search results for '{{keyword}}'</h2>
            {{else}}
            <h2 class="section-title text-center mb-3">No recipes found for '{{keyword}}'</h2>
            {{/if}}

            {{#each searchResults}}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mt-4 text-center recipe-card">
                <a href="/admin/view-recipe/{{this._id}}">
                    <div class="recipe-img">
                        <img class="img-fluid" src="/recipe_images/{{this._id}}.jpg" alt="{{this.name}}">
                    </div>
                    <p class="mt-2">{{this.name}}</p>
                </a>
            </div>
            {{/each}}

        </div>
    </div>
</section>