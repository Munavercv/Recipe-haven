<section>
    <div class="container">
        <button class="back-button ps-5 mt-4" onclick="goBack()">
            <i class="fa-solid fa-caret-left"></i> Back
        </button>

        <h2 class="section-title text-center mt-4 mb-5">Cuisines</h2>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">
            <!-- Search form -->
            <form class="d-flex me-md-5 text-start mb-3 mb-md-0" role="search" action="/admin/search-cuisine" method="get">
                <input class="form-control rounded-5 searchbox" type="search" placeholder="Search cuisines" aria-label="Search" name="keyword">
                <button class="ms-1 rounded-5 header-btn" type="submit">Search</button>
            </form>

            <!-- Add cuisine button -->
            <div class="text-end text-md-start">
                <a href="/admin/add-cuisine">
                    <button class="primary-btn">Add &nbsp;<i class="fa-solid fa-plus"></i></button>
                </a>
            </div>
        </div>

        <!-- Table (Make table scrollable on smaller screens) -->
        <div class="table-responsive">
            <table class="table cuisine-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th width="65%">Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cuisines}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td class="text-end">
                            <div class="d-flex flex-column flex-md-row justify-content-end">
                                <a href="/admin/edit-cuisine/{{this._id}}" class="me-0 me-md-3 mb-2 mb-md-0">
                                    <button class="btn btn-primary rounded-3 w-100">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                </a>
                                <a href="/admin/delete-cuisine/{{this._id}}" onclick="return confirm('Are you sure you want to permanently delete this Cuisine?')">
                                    <button class="btn btn-danger rounded-3 w-100">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
