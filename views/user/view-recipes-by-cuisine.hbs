<section>
    <div class="container-fluid">
        <div class="row">

            <div class="head-sec my-3">
                <h2 class="section-title text-center">{{cuisine.name}}</h2>
                <p class="text-center">{{cuisine.description}}</p>
            </div>

            {{#each recipes}}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 text-center recipe-card">
                <a href="/view-recipe/{{this._id}}">
                    <div class="recipe-img">
                        <img class="img-fluid" src="/recipe_images/{{this._id}}.jpg" alt="{{this.name}}">
                    </div>
                    <p class="mt-2">{{this.name}}</p>
                </a>
            </div>
            {{/each}}

        </div>
    </div>
</section>