<section class="user-recipes-sec">

    <div class="head-sec my-3">
        <h2 class="section-title text-center">Recipes</h2>
    </div>

    {{#if recipes}}
    <div class="recipe-pending">
        <div class="container-fluid">
            <div class="row">

                {{#each recipes}}
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4 text-center recipe-card">
                    <a href="/view-recipe/{{this._id}}">
                        <div class="recipe-img">
                            <img src="/recipe_images/{{this._id}}.jpg" alt="{{this.name}}">
                        </div>
                        <p class="mt-2">{{this.name}}</p>
                    </a>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
    {{/if}}

</section>