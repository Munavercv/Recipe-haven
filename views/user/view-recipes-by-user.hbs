<section class="user-recipes-sec">
    <button class="back-button ps-5 mt-4" onclick="goBack()"><i class="fa-solid fa-caret-left"></i> Back</button>

    <h2 class="section-title text-center mt-4">Recipes</h2>

    {{#if recipes}}
    <div class="recipe-pending my-5">
        <div class="container-fluid">
            <div class="row">

                {{#each recipes}}
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mt-4 text-center recipe-card">
                    <a href="/view-recipe/{{this._id}}">
                        <div class="recipe-img">
                            <img src="/recipe_images/{{this._id}}.jpg" alt="{{this.name}}">
                        </div>
                        <p class="mt-2">{{this.name}}</p>
                    </a>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
    {{/if}}

</section>