<section>
    <div class="head-sec my-3">
        <h2 class="section-title">My Bookmarks</h2>
    </div>
    <div class="container-fluid">
        <div class="row">
            {{#if bookmarks}}

            {{#each bookmarks}}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4 text-center recipe-card">
                <a href="/view-recipe/{{this._id}}">
                    <div class="recipe-img">
                        <img class="img-fluid" src="/recipe_images/{{this._id}}.jpg" alt="{{this.name}}">
                    </div>
                    <p class="mt-2">{{this.name}}</p>
                </a>
            </div>
            {{/each}}

            {{else}}
            <div class="px-4 py-5 my-5 text-center">
                <i style="font-size: 3rem;" class="fa-solid fa-face-frown mb-4"></i>
                <h1 class="display-5 fw-bold">No Bookmarks</h1>
                <div class="col-lg-6 mx-auto">
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                        <button onclick="goBack()" type="button" class="primary-btn">Go Back</button>
                    </div>
                </div>
            </div>
            {{/if}}

        </div>
    </div>
</section>