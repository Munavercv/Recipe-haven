                    <p class="mt-2">View all</p>
                </a>
            </div>

        </div>
    </div>
</section>



<section class="latest-recipes-sec">
    <div class="container py-5">
        <div class="row">
            <h2 class="section-title text-center">Latest Recipes</h2>

            {{#each latestRecipes}}
            <div class="col-md-3 mt-4 text-center recipe-card">
                <a href="/view-recipe/{{this._id}}">
                    <div class="recipe-img">
                        <img src="/recipe_images/{{this._id}}.jpg"
                            alt="{{this.name}}">
                    </div>
                    <p class="mt-2">{{this.name}}</p>
                </a>
            </div>
            {{/each}}

        </div>
    </div>
</section>



